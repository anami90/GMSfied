<%=  simple_form_for @donor, :html => { :class => 'form-horizontal' }, :validate => true do |f| %>
    <%= f.error_notification %>
    
    <%= f.input :name %>
    <%= f.input :description, :input_html => { :style => "height: 35px" } %>
    <%= f.input :funding %>
    <%= f.input :project, label: 'Project Name' %> 
    <%= f.input :balance, :readonly => true %>
    
  <div class="form-actions">
    <%= f.button :submit,"Create", :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                donors_path, :class => 'btn' %>
  </div>
<% end %>

 
