<%- model_class = Grantee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %> <i class="icon-user icon-blue"></i> <i class="icon-gift icon-blue"></i></h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_grantee_path,
            :class => 'btn btn-primary' %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:firstname) %></th>
      <th><%= model_class.human_attribute_name(:lastname) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th>MOU</th>
      <th><%= model_class.human_attribute_name(:organization) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th>Grant</th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <!--<th><%= model_class.human_attribute_name(:created_at) %></th>-->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @grantees.each do |grantee| %>
      <tr>
        <td><%= link_to grantee.id, grantee_path(grantee) %></td>
        <td><%= grantee.firstname %></td>
        <td><%= grantee.lastname %></td>
        <td><%= grantee.email %></td>
        <td><%= link_to "PDF", grantee.memorandumou.url , :target => '_blank', :class =>"icon-folder-open-alt icon-blue icon-4"%></td>
       <!-- link_to @grantee.memorandumou.name, @grantee.memorandumou.url -->
        <td><%= grantee.organization %></td>
        <td><%= grantee.description %></td>
        <td><%= grantee.project_id %></td>
        <td><%= grantee.date %></td>
        <!--<td><%=l grantee.created_at %></td>-->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_grantee_path(grantee), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      grantee_path(grantee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_grantee_path,
            :class => 'btn btn-primary' %>
